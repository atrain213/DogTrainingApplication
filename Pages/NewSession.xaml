<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.NewSession"
             Title="NewSession">
    <VerticalStackLayout>
        <Label 
            Text="Create New Training Session"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="CenterAndExpand" />

        <Entry Placeholder="Dog's Name" x:Name="DogNameEntry" />
        <Entry Placeholder="Trainer" x:Name="TrainerEntry" />
        <Entry Placeholder="Training Type" x:Name="TrainingTypeEntry" />
        <Entry Placeholder="Duration(minutes)" x:Name="DurationEntry" />

        <Button
            Text="Save Training Session"
            Clicked="SaveTrainingSession_Clicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>