<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.TrainingPage"
             Title="TrainingPage">
    
    <VerticalStackLayout>
        <Label 
            Text="Dog Training Session Tracker" 
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="CenterAndExpand"/>

        <Button
            Text="Start Session"
            Clicked="StartSession_Clicked"
            HorizontalOptions="Center" />
        
        <Button
            Text="Create New Session"
            Clicked="NewSession_Clicked"
            HorizontalOptions="Center" />

        <Button
            Text="Plan Session"
            Clicked="PlanSession_Clicked"
            HorizontalOptions="Center" />

        <Button
            Text="Tricks"
            Clicked="Tricks_Clicked"
            HorizontalOptions="Center" />

        <Button
            Text="Detail Sessions"
           
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>