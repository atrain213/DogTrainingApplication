<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.DataExportPage"
             Title="DataExportPage">
    <VerticalStackLayout>
        <Label 
            Text="Export data:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
    Text="Select the dog(s) you would like to get data of:"
    VerticalOptions="Center" 
    HorizontalOptions="Center" />
        <Label 
        Text="Bella
              Lucky
              Luna
              Max
              ..."
        VerticalOptions="Center" FontSize="10"
        HorizontalOptions="Center" />

        <Button 
          Text="Export Dog(s) Data >"  Margin="5"
          VerticalOptions="End" 
          HorizontalOptions="CenterAndExpand" />

        <Button 
             Text="Export Past Session >"  Margin="5"
              VerticalOptions="End" 
             HorizontalOptions="CenterAndExpand" />
        
        <Button 
            Text="Printable Version >"  Margin="5"
            VerticalOptions="End" 
            HorizontalOptions="CenterAndExpand" />
    </VerticalStackLayout>
</ContentPage>